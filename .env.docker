APP_NAME=Papersome
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8088
APP_URL_DOCKER=http://php:8080

# Laravel
# Note: APP_KEY can remain in your local .env. Generate with:
# docker compose run --rm php php artisan key:generate

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=papersome
DB_USERNAME=papersome
DB_PASSWORD=secret

# Cache / Session / Queue
CACHE_STORE=redis
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Browsershot (Chromium in Docker)
BROWSERSHOT_REMOTE_INSTANCE_NAME=chromium
#BROWSERSHOT_REMOTE_INSTANCE_PORT=9222

# PHP / Server
PHP_UPLOAD_MAX_FILE_SIZE=500M
PHP_OPCACHE_ENABLE=1
HEALTHCHECK_PATH=/up
SSL_MODE=mixed

# ServersideUp Autorun (dev-friendly defaults)
AUTORUN_ENABLED=true
AUTORUN_DEBUG=false
AUTORUN_LARAVEL_MIGRATION=true
AUTORUN_LARAVEL_MIGRATION_FORCE=true
AUTORUN_LARAVEL_MIGRATION_MODE=default
AUTORUN_LARAVEL_MIGRATION_SEED=false
AUTORUN_LARAVEL_CONFIG_CACHE=true
AUTORUN_LARAVEL_ROUTE_CACHE=true
AUTORUN_LARAVEL_VIEW_CACHE=true
AUTORUN_LARAVEL_EVENT_CACHE=true
AUTORUN_LARAVEL_STORAGE_LINK=true
